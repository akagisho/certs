<%= form_for @certificate, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :common_name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :common_name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :ipv4addr, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :ipv4addr, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :port, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :port, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :organization, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :organization, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :issuer, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :issuer, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :expired_at, :class => 'control-label' %>
    <div class="controls">
      <%= f.datetime_select :expired_at, :class => 'datetime_select' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :checked_at, :class => 'control-label' %>
    <div class="controls">
      <%= f.datetime_select :checked_at, :class => 'datetime_select' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :note, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :note, :class => 'text_area' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                certificates_path, :class => 'btn' %>
  </div>
<% end %>
